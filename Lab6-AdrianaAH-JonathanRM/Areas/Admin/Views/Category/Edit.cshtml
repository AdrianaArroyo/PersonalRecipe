@model Category

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div row pb-2>
			<h2 class="text-primary">Editar Categoría</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control"/>
			<span asp-validation-for="Name" class="text-danger" ></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Actualizar</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px"> 
			Regresar
		</a>
	</div>
</form>